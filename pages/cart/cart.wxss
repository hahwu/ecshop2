/* pages/cart/cart.wxss */
.cart{
  display:flex;
  flex-direction:column;
}

.top{
  position: fixed;
  top:0;
  right: 0;
  height:100rpx;
  width:100%;
  font-size:35rpx;
  line-height: 100rpx;
  text-align: center;
  border-bottom: 1rpx solid #cccccc;
}
.foot{
  position: fixed;
  bottom: 0;
  right: 0;
  height: 120rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-top:1rpx solid #cccccc;
}
.foot view{
  height:120rpx;
  font-size:35rpx;
  line-height:120rpx;
  text-align: center;
}
.body{
  width:100%;
  margin-top:100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.item{
  display: flex;
  flex-direction: row;
  align-items: center;
  width:690rpx;
  height:150rpx;
  margin-top:20rpx;
}
.item_top{
  width:690rpx;
  height:120rpx;
  display:flex;
  flex-direction:row;
  justify-content: space-between;
  align-items: center;
  font-size:35rpx;
}
.item_top_font{
  width:180rpx;
  height:85rpx;
  line-height:85rpx;
  background:red;
  color:white;
  text-align: center;
  border-radius: 15rpx;
}
.item_font{
  margin-left: 10rpx;
  height:150rpx;
  width:500rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.item_font view{
  height:50rpx;
  line-height: 50rpx;
  font-size: 35rpx;
  
}
.num{
  height:40rpx;
  line-height:40rpx;
}
.round{
  margin-left: 20rpx;
  height:30rpx;
  width: 30rpx;
  border: 1rpx solid #000;
  border-radius: 50%;
  line-height: 30rpx;
  font-size: 30rpx;
}