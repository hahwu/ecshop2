/* pages/user/user.wxss */
.user{
  width:650rpx;
  height:200rpx;
  display:flex;
  flex-direction:row;
  justify-content: space-between;
  align-items: center;
}
.user_item{
  width:300rpx;
  display:flex;
  flex-direction:row;
  justify-content: center;
  align-items: center;
}
.user image{
  height:120rpx;
  width:120rpx;
}
.exam{
  border:1rpx solid #cccccc;
}
.body{
  width:100%;
  background:white;
}
.flex_row{
  display:flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.flex_column{
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.body_item{
  width:100%;
  height:100rpx;
  border-bottom: 1rpx solid #cccccc;
  line-height: 100rpx;
  font-size: 35rpx;
}
.body_item_info{
  width:100%;
  height:100rpx;
}