<!--pages/order/order.wxml-->
<view class='container'>
  <view class='top flex_row'>
    <view class='top_item select' wx:if='{{choose == 1}}' id='1' bindtap='choose'>全部</view>
    <view class='top_item' wx:else id='1' bindtap='choose'>全部</view>
    <view class='top_item select' wx:if='{{choose == 2}}' id='2'>待付款</view>
    <view class='top_item' wx:else id='2' bindtap='choose'>待付款</view>
    <view class='top_item select' wx:if='{{choose == 3}}' id='3'>待收货</view>
    <view class='top_item' wx:else id='3' bindtap='choose'>待收货</view>
    <view class='top_item select' wx:if='{{choose == 4}}' id='4'>待发货</view>
    <view class='top_item' wx:else id='4' bindtap='choose'>待发货</view>
    <view class='top_item select' wx:if='{{choose == 5}}' id='5'>待评价</view>
    <view class='top_item' wx:else id='5' bindtap='choose'>待评价</view>
  </view>
  <view class='body flex_column '>
    <view class='body_item flex_column'>
      <view class='body_item_1 flex_row'>
        <view>2017-10-31 10:31:54</view>
        <view>已关闭</view>
      </view>
      <view class='body_item_2 flex_row'>
        <view class='body_item_info flex_row'>
          <image src='../../img/item.jpg' mode='widthFix'></image>
          <view style='margin-left:20rpx;'>雅蜜小情歌伴手礼420G</view>
        </view>
        <view class='flex_column' style='width:150rpx;margin:0'>
          <view class='item_font' style='height:50rpx;'>￥69.00</view>
          <view class='item_font' style='height:50rpx;'>x1</view>
        </view>
      </view>
      <view class='body_item_3 flex_row'>
        <view>共1件</view>
        <view>实付:</view>
        <view style='color:red'>￥69.00</view>
      </view>
    </view>
    
  </view>
  <view class='foot'>已经没有新数据了</view>
</view>
