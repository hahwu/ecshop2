/* pages/detail/detail.wxss */
.swiper{
  width:100%;
  height: 400rpx;
  border-bottom: 1px solid #cccccc;
}
.slide-image{
  width:100%;
  height: 500rpx;
}
.detail{
  display:flex;
  flex-direction:column;
  width:690rpx;
}
.detail_font1{
  font-size:35rpx;
  height:60rpx;
  line-height:60rpx;
}
.detail_font2{
  display:inline-flex;
  font-size: 25rpx;
  height:50rpx;
  line-height: 50rpx;
}
.img{
  width:690rpx;
  display: flex;
  flex-direction:column;
  padding-top:20rpx;
}
.foot{
 width:100%;
 height:140rpx;
 overflow: hidden;
 position: fixed;
 bottom: 0;
 left: 0;
 border-top:1rpx solid #cccccc;
 z-index: 2000;
 background: #fff;
 display:flex;
 flex-direction:row;
 align-items: center;
 justify-content: space-around;
 align-content: center;
}
.foot_item{
  border:1rpx solid #cccccc;
  font-size:35rpx;
  line-height:100rpx;
  width:335rpx;
  height:100rpx;
  text-align: center;
  border-radius: 10rpx;
}